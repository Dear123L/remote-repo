<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--mybatis会根据这个xml文件动态地生成实现类-->
<mapper namespace="com.learn.mapper.UserMapper">
<!--    指定接口类在哪-->
    <!--resultType要写自己的类名-->
    <select id="getAllUsers" resultType="com.learn.pojo.User">
        select * from learn_mybatis
    </select>

    <select id="getUserById" resultType="com.learn.pojo.User">
        select * from learn_mybatis where id = #{id}
    </select>

    <insert id="insertUser">
        insert into learn_mybatis values (null,#{name},#{password})
    </insert>

    <update id="updateUser">
        update mybatis.User set password = #{password} where id = #{id};
    </update>

    <delete id="deleteUserById">
        delete from learn_mybatis where id = #{id}
    </delete>
</mapper>